{
	"name": "yard/brave-hooks",
	"type": "package",
	"description": "Brave default hooks",
	"license": "MIT",
	"config": {
		"allow-plugins": {
			"pestphp/pest-plugin": true
		},
		"platform": {
			"php": "8.2"
		},
		"sort-packages": true
	},
	"support": {
		"source": "https://github.com/yardinternet/brave-hooks",
		"issues": "https://github.com/yardinternet/brave-hooks/issues"
	},
	"require": {
		"php": ">=8.2",
		"ext-dom": "*",
		"ext-libxml": ">=8.1",
		"lib-libxml": ">=2.9",
		"roots/acorn": "^4.0|^5.0",
		"spatie/laravel-csp": "^2.0",
		"spatie/laravel-package-tools": "^1.16",
		"yard/wp-hook-registrar": "^2.0"
	},
	"require-dev": {
		"10up/wp_mock": "^0.4.2",
		"pestphp/pest": "^2.36",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"yard/php-cs-fixer-rules": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"Yard\\Brave\\Hooks\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Yard\\Brave\\Hooks\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"all": [
			"@test",
			"@analyse",
			"@format"
		],
		"analyse": "vendor/bin/phpstan analyse --debug --memory-limit 1G",
		"format": "vendor/bin/php-cs-fixer fix",
		"test": "vendor/bin/pest",
		"test:coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage"
	},
	"extra": {
		"acorn": {
			"providers": [
				"Yard\\Brave\\Hooks\\HookServiceProvider"
			]
		}
	}
}
